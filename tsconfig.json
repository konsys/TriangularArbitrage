{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2015",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "noEmit": false
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "exposes",
    "public",
    "dist",
    "build"
  ]
}

